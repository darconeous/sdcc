CC	= $(PRJDIR)/bin/sdcc
CPP	= $(PRJDIR)/bin/sdcpp

AS	= @GPASM@
LD	= @GPLINK@
AR	= @GPLIB@

RM	= @RM@
CP	= @CP@
MV	= @MV@
LS	= @LS@
SED	= @SED@

# Quick+dirty fix: this should be defined elsewhere,
# but it's needed for `make clean`; Bernhard
MM = -MM

MODELFLAGS      = -mpic16

OPT_FLAGS	+= --denable-peeps
OPT_FLAGS	+= --obanksel=9
OPT_FLAGS	+= --optimize-goto
OPT_FLAGS	+= --i-code-in-asm
